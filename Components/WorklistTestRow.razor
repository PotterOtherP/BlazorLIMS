@using BlazorLIMS.Data;

@if (@SampleType.Equals("Plant"))
{
    @foreach (var test in Info.PlantTestMenu)
    {
        var units = Info.PlantTestMenuUnits[Array.IndexOf(Info.PlantTestMenu, @test)];
        if (units.Length > 0)
            units = $"({units})";
        string str = $"{@test} {@units}";
        <th>@str</th>
    }
}

